@model SISv2.Models.ClassStudent

@{
    ViewBag.Title = "Create a New Class";
}
<br />
@section Menu {
    @Scripts.Render("~/Scripts/Forms/Advanced/menu")
}

@Styles.Render("~/Content/plugins/select2/css")
@Styles.Render("~/Content/plugins/icheck/css")
@Styles.Render("~/Content/dist/css")
@Styles.Render("~/Content/dist/css/skins")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Course_ModuleId", "Module", htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-4">
                @Html.DropDownList("Course_ModuleId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("Course_ModuleId", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StudentList, htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-4">
                @Html.ListBoxFor(model => model.StudentList, ViewBag.StudentId as MultiSelectList, new { @multiple = "multiple", @class = "from-control select2", @style = "width:100%" })
                @Html.ValidationMessage("StudentList", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Day, htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-4">
                @Html.EditorFor(model => model.Day, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Day, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display: none;">
            @Html.LabelFor(model => model.st, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.st, new { htmlAttributes = new { @class = "form-control", @Value = true, @readonly = "Read Only" } })
                @Html.ValidationMessageFor(model => model.st, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-4">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
@Scripts.Render("~/Content/plugins/select2/js")
    @Scripts.Render("~/Content/plugins/jquery-validate/js")
@Scripts.Render("~/Content/plugins/bootstrap-multiselect")
@Scripts.Render("~/bundles/jquerymask")
@Scripts.Render("~/Content/plugins/input-mask/js")
@Scripts.Render("~/Content/plugins/icheck/js")
@Scripts.Render("~/Scripts/Forms/Advanced")
<script>
    $(document).ready(function () {

        $('.multiselectddl').multiselect();
    });
</script>
<script src="~/Scripts/jquery.maskedinput.js" type="text/javascript"></script>
<script>
        $(document).ready(function() {
            $("#Lab_ExpireDate").inputmask("date");
        });
</script>
}
