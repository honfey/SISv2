@model IEnumerable<SISv2.Models.Student>

@{
    ViewBag.Title = "Check Specific Student";
}

<h2>Check Specific Student</h2>


@using (Html.BeginForm("CSS", "Attendances", FormMethod.Get))
{
    <p>
        <input type="text" placeholder="Search By Student ID" name="SearchID">

        <input type="text" placeholder="Search By Student Name" name="SearchName">

        <input type="text" placeholder="Search By Student IC" name="SearchIC">

        <input type="submit" value="Search">
    </p>
}

<table class="table">
@{
    int count = Model.Count();
}

@if (count == 0)
{

    <tr>
        <th>
            Enter a valid StudentIC or StudentName to Search !<br>
            If does not have result means <bold>RECORD NOT FOUND !</bold>
        <th>
    </tr>
}
else
{
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th>            
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th></th>
    </tr>

foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.ActionLink("Check Attendance", "CSSM", new { id = item.Id })
        </td>
    </tr>
}
}
</table>
