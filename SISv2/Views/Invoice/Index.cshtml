                    <th>
                        @Html.DisplayNameFor(model => model.ud)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ub)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.st)
                    </th>*@
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    if (item.st == 1)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Color)
                                </td>*@
                            @*<td>
                                @Html.DisplayFor(modelItem => item.cd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cb)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ud)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ub)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.st)
                            </td>*@
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Invoice", "Invoice", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

