@model IEnumerable<SISv2.Models.CourseWork>

@{
    ViewBag.Title = "CourseWork";
}

<br />
@Styles.Render("~/Content/plugins/datatables/css")
<div class="box">
    <div class="box-header">

        <h3 class="box-title">@Html.ActionLink("Create New", "Create")</h3>

        <div class="box-body">
            <table id="student" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ClassStudent.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Marks)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Course_Module.CourseId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModuleStandard.LabName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TestType.Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassStudent.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Marks)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Course_Module.CourseId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleStandard.LabName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TestType.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("ReportCard", "ReportCard", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Content/plugins/jquery-validate/js")
    @Scripts.Render("~/Content/plugins/datatables/js")
    <script>
        $(document).ready(function() {
            $("#student").DataTable();
        });
    </script>
}
