@model SISv2.Models.Intake

@{
    ViewBag.Title = "Create";
}

<br />


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Intake</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.YearId, "Year", htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-4">
                <select id="YearId" name="YearId">
                    <option value=19>@DateTime.Now.AddYears(-4).Year</option>
                    <option value=20>@DateTime.Now.AddYears(-3).Year</option>
                    <option value=21>@DateTime.Now.AddYears(-2).Year</option>
                    <option value=22>@DateTime.Now.AddYears(-1).Year</option>
                    <option value=23>@DateTime.Now.Year</option>
                    <option value=24>@DateTime.Now.AddYears(1).Year</option>
                    
                </select>
                @*@Html.DropDownList("YearId", null, "---Select Year---", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.YearId, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MonthId, "Month", htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-4">
                @Html.DropDownList("MonthId", null, "---Select Month---",htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MonthId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CourseCode, "CourseName", htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-4">
                @Html.DropDownList("CourseCode", null,"---Select Course---", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CourseCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-4">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
